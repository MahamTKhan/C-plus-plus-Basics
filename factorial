#include <iostream>
using namespace std;

int factorial(int num){
    int fact;
    if (num<=1){
        return 1;
    }
    fact=num*factorial(num-1);
    return fact;
}

int main(){

    int num;
    cout<<"enter a number to calculate its factorial"<<endl;
    cin>>num;
    cout<<"the factorial of "<<num<<"is"<<factorial(num);

    return 0;
}
