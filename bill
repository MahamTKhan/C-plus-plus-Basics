int main(){

    int quantity;
    float itemprice;
    float totalbill;

    //fixed---->helps us to show the number in actual form rather than an exponential
    //form such as 2e1.e^00etc

    //setprecision(2/4)---->helps us to show the decimal point that is setprecison(2)
    //will show us 2 decimal points

    //showpoint---->diplays decimal point even if it is a whole number

    cout<<setprecision(4)<<fixed<<showpoint;
    cout<<"please input the number if items bought:"<<endl;
    cin>>quantity;
    cout<<"please input the price of each item:"<<endl;
    cin>>itemprice;

    totalbill=itemprice*quantity;
    cout<<"the total bill is $"<<totalbill<<endl;
    
